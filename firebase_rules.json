{
    "rules" : {
        "rooms" : {
            "$hash" : {
                ".read" : "root/users/auth.uid",
                ".write" : ""
            }
        },

        "$roomid" : {
            
        },

        "users" : {

            "nicks" : {
                ".read" : "auth != null",
                ".write" : "users/$uid/nick === TODO",
                ".validate" : "uid is in users"
            },

            "$user" : {
                "info" : {
                    ".read" : "auth != null",
                    ".write": "auth.uid === $user"
                },
                "rooms" : {
                    ".read" : "auth != null",
                    ".write": "auth.uid === $user"
                },
                "contacts" : {
                    ".read" : "auth != null",
                    ".write": "auth.uid === $user"
                },
                "invite_tokens" : {
                    ".read" : "auth.uid === $user",
                    ".write": "root/users/$user/contacts/auth.uid === auth.uid"
                }
            }

        }
    }
}